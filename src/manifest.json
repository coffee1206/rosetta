{
  "manifest_version": 3,
  "name": "rosetta",
  "description": "ChatGPT Translator",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.jpg",
      "48": "images/icon48.jpg",
      "128": "images/icon128.jpg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background_script.js"
  },
  "icons": {
    "16": "images/icon16.jpg",
    "48": "images/icon48.jpg",
    "128": "images/icon128.jpg"
  },
  "options_page": "option/option.html"
}